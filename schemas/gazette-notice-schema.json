{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Notice",
  "description": "A gazette notice",
  "type": "object",
  "properties": {
    "issue": {
      "$ref": "#/definitions/issue"
    },
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "body": {
      "type": "string"
    },
    "classification": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "relations": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/relation"
      }
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "media_type": {
      "type": "string"
    },
    "other_attributes": {
      "type": "object"
    }
  },
  "additionalProperties": false,
  "required": [
    "id"
  ],
  "definitions": {
    "publisher": {
      "title": "Publisher",
      "description": "A gazette publisher",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    },
    "publication": {
      "title": "Publication",
      "description": "A gazette",
      "type": "object",
      "properties": {
        "publisher": {
          "$ref": "#/definitions/publisher"
        },
        "jurisdiction_code": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    },
    "issue": {
      "title": "Issue",
      "description": "An issue of a gazette",
      "type": "object",
      "properties": {
        "publication": {
          "$ref": "#/definitions/publication"
        },
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "edition_id": {
          "type": "string"
        },
        "page_range": {
          "type": "string",
          "pattern": "^[0-9]*(-[0-9]*)?$"
        },
        "date_published": {
          "type": "string",
          "pattern": "^[0-9]{4}(-[0-9]{2}){2}$"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "media_type": {
          "type": "string"
        },
        "retrieved_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    },
    "relation": {
      "title": "Relation",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "entity": {
          "$ref": "includes/entity.json"
        },
        "start_date": {
          "type": "string",
          "pattern": "^[0-9]{4}(-[0-9]{2}){2}$"
        },
        "end_date": {
          "type": "string",
          "pattern": "^[0-9]{4}(-[0-9]{2}){2}$"
        }
      },
      "additionalProperties": false
    }
  }
}
